{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "jest"
    ],
    "overrides": [
        {
            "files": ["**/*.ts", "**/*.tsx"],
            "parser": "@typescript-eslint/parser",
            "plugins": ["@typescript-eslint"],
            "rules": {
                "react/prop-types": [
                    0
                ],
                "no-unused-vars": "off",
                "@typescript-eslint/no-unused-vars": "warn"
            }
          }
    ],
    "env": {
        "jest/globals": true,
        "browser": true
    },
    "rules": {
    }
}
